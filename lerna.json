{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "allowBranch": ["main", "master"],
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/*.e2e.ts",
        "**/__tests__/**",
        "**/node_modules/**",
        "**/.git/**"
      ]
    },
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "tagVersionPrefix": "v",
      "bump": "auto"
    }
  },
  "packages": ["."]
}

